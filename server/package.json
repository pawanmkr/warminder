{
  "name": "warminder",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "pnpx prisma generate && tsc",
    "watch": "tsc --watch",
    "start": "node --watch dist/src/index.js",
    "auto": "pnpx prisma generate && tsc && pnpm start",
    "lint": "eslint --fix .",
    "prepare": "husky install",
